<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/marginNarrow"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4.5"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginRight="@dimen/marginNormal"
            android:textColor="#333"
            android:textSize="@dimen/textSmall"
            android:textStyle="bold"
            android:text="예당저수지"/>

        <TextView
            android:id="@+id/tv_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginRight="@dimen/marginNormal"
            android:textColor="#555"
            android:textSize="@dimen/textSmall"
            android:text="40.3%"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textColor="#999"
            android:textSize="@dimen/textVerySmall"
            android:text="08.22"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vg_last"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5.5"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/marginWide"
            android:layout_marginRight="@dimen/marginWide"
            android:src="@drawable/ic_arrow_right_alt"/>

        <TextView
            android:id="@+id/tv_level1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginRight="@dimen/marginNormal"
            android:textColor="#555"
            android:textSize="@dimen/textSmall"
            android:text="40.3%"/>

        <TextView
            android:id="@+id/tv_date1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textColor="#999"
            android:textSize="@dimen/textVerySmall"
            android:text="08.22"/>

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="@dimen/marginXtraWide"
            android:layout_marginRight="@dimen/marginWide"
            app:tint="#0000FF"
            android:src="@drawable/ic_arrow_drop_down"/>
    </LinearLayout>
</LinearLayout>
