<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/marginNarrow"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="left|center_vertical"
        android:layout_marginRight="@dimen/marginNormal"
        android:textColor="#333"
        android:textSize="@dimen/textSmall"
        android:textStyle="bold"
        android:text="예당저수지"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="right"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="@dimen/marginNormal"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="#555"
                android:textSize="@dimen/textSmall"
                android:text="15.3m"/>
            <TextView
                android:id="@+id/tv_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="#555"
                android:textSize="@dimen/textSmall"
                android:text="40.3%"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="08.22"
            android:textColor="#999"
            android:textSize="@dimen/textVerySmall" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vg_last"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:gravity="left"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/marginWide"
            android:layout_marginRight="@dimen/marginWide"
            android:src="@drawable/ic_arrow_right_alt"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="@dimen/marginNormal"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_level1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="#555"
                android:textSize="@dimen/textSmall"
                android:text="15.4m"/>
            <TextView
                android:id="@+id/tv_rate1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="#555"
                android:textSize="@dimen/textSmall"
                android:text="40.3%"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_date1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="@dimen/marginWide"
            android:textColor="#999"
            android:textSize="@dimen/textVerySmall"
            android:text="08.22"/>

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/marginWide"
            app:tint="#0000FF"
            android:src="@drawable/ic_arrow_drop_down"/>
    </LinearLayout>
</LinearLayout>
